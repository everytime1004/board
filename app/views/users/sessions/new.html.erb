<h2>로그인</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
  	<%= f.input :name, :required => false, :autofocus => true, label: "아이디"%>
    <%= f.input :password, :required => false, label: "패스워드"%>
    <%= f.input :remember_me, label: "기억하기", 	:as => :boolean if devise_mapping.rememberable?%>
  </div>
  
  <%= f.button :submit, "로그인" %>
 
<% end %>

<%= render "users/shared/links" %>
